            <h2>Adding Term Class Details</h2>
            <p>To add a new term class detail, please enter their information below and click 'Add Term Class Detail'</p>
            <form id="add-termclassdetails-form-ajax">


                <label for="input-termID">Term: </label>
                    <select name="input-termID" id="input-termID">
                    <option value=""> Select a Term </option>
                    {{#each terms}}
                    <option value="{{this.termID}}">{{this.term}} {{this.yr}}</option>
                    {{/each}}
                    </select>

                <label for="input-classID">Class: </label>
                    <select name="input-classID" id="input-classID">
                    <option value=""> Select a Class </option>
                    {{#each classes}}
                    <option value="{{this.classID}}">{{this.className}}</option>
                    {{/each}}
                    </select>

                <input type="submit" value =" New Term Class Detail">
            </form>

            {{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
            <script src="./js/add_termclassdetails.js"></script>

